<map 
    id="mcMap" 
    class="mcMap" 
    latitude="{{lat}}" 
    longitude="{{lng}}" 
    scale="15" 
    controls="{{controls}}" 
    bindcontroltap="controltap" 
    bindtap= "bindViewTap" 
    bindregionchange="regionchange" 
    markers="{{markers}}" 
    bindmarkertap="markertap" 
    show-location="{{true}}">
</map>
<view class="poi_info">
  <text>{{poi.name}}</text>
  <text>{{poi.level}}</text>
</view>